{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      "**/*.proto",
      {
        "include": "../config/*",
        "outDir": "./dist/config"
      },
      {
        "include": "../.secrets/*",
        "outDir": "./dist/.secrets"
      }
    ],
    "watchAssets": true,
    "webpack": true
  },
  "projects": {
  }
}